@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Product.ProductID!=0?"Update":"Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <form method="post"class="row" enctype="multipart/form-data">
            <input asp-for="Product.ProductID" hidden />
            <input asp-for="Product.ProductImageURL" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductTitle" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductTitle"></label>
                            <span asp-validation-for="Product.ProductTitle" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.ProductDescription" class="ms-2 text-muted"></label>
                            <textarea asp-for="Product.ProductDescription" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductISBN" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductISBN"></label>
                            <span asp-validation-for="Product.ProductISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductAuthor" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductAuthor"></label>
                            <span asp-validation-for="Product.ProductAuthor" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductListPrice"></label>
                            <span asp-validation-for="Product.ProductListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductPrice"></label>
                            <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductPrice50" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductPrice50"></label>
                            <span asp-validation-for="Product.ProductPrice50" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductPrice100" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductPrice100"></label>
                            <span asp-validation-for="Product.ProductPrice100" class="text-danger"></span>
                        </div>

                        @* ViewBag Example *@
                        @* <div class="form-floating py-2 col-12">
                        <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-control border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                        </select>
                        <label asp-for="CategoryID"></label>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div> *@

                        @* ViewData Example
                        <div class="form-floating py-2 col-12">
                        <select asp-for="CategoryID" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-control border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                        </select>
                        <label asp-for="CategoryID"></label>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div> *@

                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.CategoryID" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryID"></label>
                            <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductImageURL"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.ProductID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Edit Product</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create Product</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ProductImageURL" width="100%"
                        style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>            
        </form>
    </div>
</div>




@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline | spellcheckdialog| align lineheight | checklist numlist bullist indent | charmap',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}