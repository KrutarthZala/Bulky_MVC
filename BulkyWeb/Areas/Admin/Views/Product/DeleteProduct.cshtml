@model ProductModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <form method="post" class="row">
            <input asp-for="ProductID" hidden />
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductTitle" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductTitle"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="ProductDescription" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="ProductDescription"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductDescription" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductDescription"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductDescription" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductDescription"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductISBN" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductISBN"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductDescription" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductDescription"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductAuthor" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductAuthor"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductListPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductListPrice"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductPrice"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductPrice50" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductPrice50"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductPrice100" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductPrice100"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>