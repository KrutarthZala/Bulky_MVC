@page
@model BulkyBookWebRazor_Temp.Pages.Category.IndexModel


<div class="container">
    <div class="row">
        <div class="col-6 pt-2 pb-2">
            <h3 class="text-primary"> Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Category/CreateCategory" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Category Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.CategoryList.OrderBy(u => u.CategoryOrder))
            {            
                <tr>
                    <td>@obj.CategoryName</td>
                    <td>@obj.CategoryOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Category/EditCategory" asp-route-categoryID="@obj.CategoryID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Category/DeleteCategory" asp-route-categoryID="@obj.CategoryID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div> 
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

